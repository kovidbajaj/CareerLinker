<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Career Linker</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <!-- Font Awesome -->
  <script src="https://kit.fontawesome.com/3528c4cb4f.js" crossorigin="anonymous"></script>
  
  <!-- Custom Styles -->
  <link rel="stylesheet" href="/css/styles.css">
  
  <!-- Animate.css -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-dark px-4" >
    <div class="container-fluid">
      <a class="navbar-brand" href="/">CareerLinker</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" 
              aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation" style="background-color: white;">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/jobs">Jobs</a></li>
          <li class="nav-item dropdown">
            <% if(locals.name){ %>
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                <%= locals.name %>
              </a>
            <% } else { %>
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                Recruiter
              </a>
            <% } %>

            <ul class="dropdown-menu">
              <% if(locals.userEmail){ %>
                <li><a class="dropdown-item" href="/logout">Logout</a></li>
                <li><a class="dropdown-item" href="/postjob">Post New Job</a></li>
              <% } else { %>
                <li><a class="dropdown-item" href="/login">Login</a></li>
                <li><a class="dropdown-item" href="/postjob">Post New Job</a></li>
              <% } %>
            </ul>
          </li>
        </ul>

        <!-- Search Form -->
        <form class="d-flex" action="/search" method="post">
          <input class="form-control me-2 search-bar" type="text" placeholder="Search" name="name" required>
          <button class="btn btn-outline-info" type="submit">Search</button>
        </form>
      </div>
    </div>
  </nav>

  <!-- Dynamic Body Content -->
  <div class="container my-4">
    <%- body %>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
