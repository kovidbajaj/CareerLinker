<!-- Job Posting Card -->
  <div class="card card-custom p-4">
    <h3 class="text-center">Update Job</h3>
    <form action="/job/update/<%=job._id%>" method="post">
      <select class="form-select mb-3" name="category" required>
          <option selected disabled>Select new Job Category</option>
          <option value="Tech">Tech</option>
          <option value="Non Tech">Non Tech</option>
      </select>
  
      <select class="form-select mb-3" name="designation" required>
        <option selected disabled>Select new Job Designation</option>
        <option value="HR">HR</option>
        <option value="SDE">SDE</option>
        <option value="DevOps">DevOps</option>
        <option value="MERN Developer">MERN Developer</option>
        <option value="MEAN Developer">MEAN Developer</option>
        <option value="JAVA Developer">JAVA Developer</option>
        <option value="Front-End Developer">Front-End Developer</option>
        <option value="Backend Developer">Backend Developer</option>
        <option value="Full-Stack Developer">Full Stack Developer</option>
      </select>
  
      <input type="text" class="form-control mb-3" placeholder="Enter Job Location" name="location" value="<%=job.location%>" required>
  
      <input type="text" class="form-control mb-3" placeholder="Enter Company Name" name="name" value="<%=job.name%>" required>
  
      <div class="row mb-3">
        <div class="col">
          <input type="text" class="form-control" placeholder="Enter Salary" name="salary" value="<%=job.salary%>" required>
        </div>
        <div class="col">
          <input type="number" class="form-control" placeholder="Total no of openings" name="positions" value="<%=job.positions%>" required>
        </div>
      </div>
  
      <div class="row mb-3">
        <div class="col-8">
          <select multiple class="form-select multi-select" name="skills" required>
            <option selected disabled>Select skills required for this job</option>
            <option value="React">React</option>
            <option value="NodeJs">NodeJs</option>
            <option value="Angular">Angular</option>
            <option value="Data Structures">Data Structures and Algorithm</option>
            <option value="MongoDB">MongoDB</option>
            <option value="SQL">SQL</option>
            <option value="Java">Java</option>
          </select>
        </div>
        <div class="col-4">
          <label class="form-label form-label-custom">Apply By</label>
          <div class="input-group">
            <input type="date" class="form-control" placeholder="dd-mm-yyyy" name="applyBy" value="<%=job.applyBy%>" required>
          </div>
        </div>
      </div>
  
      <button type="submit" class="btn btn-submit w-100">Update</button>
    </form>
  </div>